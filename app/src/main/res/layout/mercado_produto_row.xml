<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">


    <TextView
        android:id="@+id/nome_produto_mercado_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:text="Produto"
        android:textColor="@color/colorPrimary"
        android:textSize="19dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/mercado_mercado_produto_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/valor_produto_mercado_row"
        android:text="Mercado X"
        android:textColor="@color/preto_fosco"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/valor_produto_mercado_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="R$ 10.00"
        android:layout_below="@+id/nome_produto_mercado_row"
        android:layout_alignParentStart="true" />


</RelativeLayout>